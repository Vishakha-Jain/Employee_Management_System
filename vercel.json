{
    "version": 2,
    "builds": [
      {
        "src": "Employee_Management_System/wsgi.py",
        "use": "@vercel/python",
        "config":{
          "maxLamdaSize":"15mb","runtime":"python3.9"}
      },
      {
       "src": "build_files.sh",
        "use": "@vercel/static_build",
        "config":{
          "distDir":"staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "Employee_Management_System/wsgi.py"
      }
    ]
  }